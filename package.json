{
  "name": "hotNews",
  "displayName": "hot-news in China weibo, douyin, jinritoutiao...",
  "description": "Scroll through daily trending searches, including Weibo, Zhihu, Douyin, etc.",
  "version": "1.2.1",
  "author": "albert.pu email: perfctrl@gmail.com",
  "engines": {
    "vscode": "^1.92.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/perfctrl/hotnews"
  },
  "publisher": "albertPu",
  "categories": [
    "Other"
  ],
  "icon": "images/icon/momangguo128x128.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "hot news",
        "properties": {
          "hotnews.scrollSpeed": {
            "type": "integer",
            "description": "Scrolling time(seconds) for each trending topic.",
            "default": 5
          },
          "hotnews.interval": {
            "type": "integer",
            "description": "Fetch the latest data every x minutes.",
            "default": 30,
            "enum": [
              15,
              30,
              45,
              60
            ]
          },
          "hotnews.msgSource": {
            "type": "array",
            "uniqueItems": true,
            "description": "Select data source.",
            "default": [
              "weibo"
            ],
            "items": {
              "type": "string",
              "enum": [
                "zhihu",
                "douyin",
                "weibo",
                "jinritoutiao"
              ]
            }
          }
        }
      }
    ],
    "commands": [
      {
        "command": "hotnews.start",
        "title": "Trending:Start playing trending topics"
      },
      {
        "command": "hotnews.stop",
        "title": "Trending:Stop playing trending topics"
      },
      {
        "command": "hotnews.refresh",
        "title": "Trending:Refresh trending topics data"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.7",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}